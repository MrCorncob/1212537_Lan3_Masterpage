        <servlet-class>com.onlineshopping.Controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManufactureServlet</servlet-name>
        <servlet-class>com.onlineshopping.Controllers.ManufactureServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperatingSystemServlet</servlet-name>
        <servlet-class>com.onlineshopping.Controllers.OperatingSystemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductService</servlet-name>
        <servlet-class>com.onlineshopping.Controllers.ProductSevlet</servlet-class>
