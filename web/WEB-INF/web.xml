    <servlet>
        <servlet-name>SaveCartsServlet</servlet-name>
        <servlet-class>com.onlineshopping.Controllers.SaveCartsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index.html</url-pattern>
