    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManufactureServlet</servlet-name>
        <url-pattern>/manufacture.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperatingSystemServlet</servlet-name>
        <url-pattern>/operating-system.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductService</servlet-name>
        <url-pattern>/product.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/carts.html</url-pattern>
